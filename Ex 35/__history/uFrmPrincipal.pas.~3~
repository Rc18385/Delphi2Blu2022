{35. Faça um algoritmo que calcule o valor da conta de luz de uma pessoa.
Sabe-se que o cálculo da conta de luz segue a tabela abaixo:
Tipo de Cliente Valor do KW/h
a. (Residência) 0,60;
b. (Comércio) 0,48;
c. (Indústria) 1,29.}


procedure TForm1.btnCalcularClick(Sender: TObject);
var
  xValor:      Double;
  xCliente:    String;
  xConta:      Double;
  xResidencia: Double;
  xComercio:   Double;
  xIndustria:  Double;
begin
  xValor   := StrToFloat(TeditConsumo.Text);
  xCliente := (TeditTipoCliente.Text);
  xConta   := 0;
  xResidencia := 0.60;
  xComercio   := 0.48;
  xIndustria  := 1.29;

  if (xCliente = 'a' ) then
  begin
    xConta := (xValor * xResidencia)
    mmResultado.Lines.Add('O valor da fatura de energia da residência é de: ' +
                          FloatToStr(xConta))
  else if (xCliente = 'b') then
    xConta := (Xvalor * xComercio)
    mmResultado.Lines.Add('O valor da fatura de energia do comércio é de: ' +
                          FloatToStr(xConta))
  else
    xConta := (xValor * xIndustria)
    mmResultado.Lines.Add('O valor da fatura de energia da industria é de: ' +
                          FloatToStr(xconta))
  end;

end;

end.
