unit Ex2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Tedit1: TEdit;
    Tedit2: TEdit;
    btnExecutar: TButton;
    TeditResultado: TEdit;
    Resultados: TLabel;
    procedure btnExecutarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.btnExecutarClick(Sender: TObject);
var
  xSoma: Integer;
  xSubtracao: Integer;
  xMultiplicacao: Integer;
  xDivisao: Double;
begin
  xSoma:= 0;
  xSubtracao:= 0;
  xMultiplicacao:= 0;
  xDivisao:= 0;
  //Soma
  begin
    xSoma := StrToInt(Tedit1.Text) + StrToInt(Tedit2.Text);
  end;
  //Subtracao
    xSubtracao:= StrToInt(Tedit1.Text) - StrToint(Tedit2.Text);
  //Multiplicacao
    xMultiplicacao:= StrToInt(Tedit1.Text) * StrToInt(Tedit2.Text);
  //Divisao
    xDivisao:= StrToInt(Tedit1.Text) / StrToInt(Tedit2.Text);
    TeditResultado.Text:= ('Soma: ' + IntToStr(xSoma) +
                          ' Subtração: ' + IntToStr(xSubtracao) +
                          ' Multiplicacao: ' + IntToStr(xMultiplicacao) +
                          ' Divisão: ' + FloatToStr(xDivisao));
  end;
end.

